{
    "run_list":  [
        "apt",
        "ntp",
        "hostname",
        "virtualbox",
        "virtualbox::user",
        "virtualbox::systemservice",
        "virtualbox::webportal",
        "samba",
        "samba::server"
    ],
    "set_fqdn":  "galactica.thedreaming.org",
    "ntp": {
        "servers": ["ntp.ubuntu.com", "pool.ntp.org"]
    },
    "apache": {
        "default_site_enabled": true
    },
    "virtualbox": {
        "user": "virtualbox",
        "group": "vboxusers"
    },
    "samba": {
        "workgroup": "WORKGROUP",
        "interfaces": "eth0 lo 127.0.0.1",
        "hosts_allow": "127.0.0.0/8 192.168.0.0/24",
        "server_string": "Galactica",
        "chef_solo": true
    }
}
